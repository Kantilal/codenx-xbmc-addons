<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.tamildesam"
       name="Oliyum Oliyum"
       version="1.0.0"
       provider-name="Senthil">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Oliyum Oliyum contains all what you look around on web for Tamil content.</summary>
    <description>Links to watch Oliyum Oliyum and Movies.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.codenx.addons" name="codenx's XBMC Addons" version="1.0.0" provider-name="senthil">
	<extension	point="xbmc.addon.repository" name="codenx's XBMC Addon Repository">
		<info compressed="false">https://github.com/codenx/repository-codenx-addons/raw/master/addons.xml</info>
		<checksum>https://github.com/codenx/repository-codenx-addons/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/codenx/repository-codenx-addons/tree/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install codenx's Addons</summary>
		<description>Download and install codenx's Addons</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
